{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/habitat_mapping_schema.json",
  "title": "Habitat Visualization Mapping Schema",
  "description": "Defines the structure for habitat design parameters.",
  "type": "object",
  "properties": {
    "habitat": {
      "type": "object",
      "description": "Contains all parameters related to the habitat design.",
      "properties": {
        "location": {
          "type": "string",
          "enum": ["Moon/Lunar Surface", "Transit (Deep Space, Cis-Lunar)", "Transit (Moon to Mars)", "Mars Surface"],
          "description": "Primary habitat environment or mission location."
        },
        "crew_size": {
          "type": "integer",
          "minimum": 2,
          "maximum": 6,
          "description": "Number of crew members supported by this habitat."
        },
        "mission_days": {
          "type": "integer",
          "description": "Expected mission duration in Earth days."
        },
        "mission_type": {
            "type": "string",
            "enum": ["Exploration", "Science & Research", "Technology Demonstration"]
        },
        "deployment_vehicle": {
            "type": "string",
            "enum": ["SLS Block 1B Cargo", "Falcon Heavy", "Starship Cargo", "Commercial Launch Vehicle"]
        },
        "habitat_material": {
          "type": "string",
          "enum": ["Metallic Hard Shell", "Inflatable Softgoods", "Hybrid Structure", "Regolith-Printed"],
          "description": "Primary construction material or configuration."
        }
      },
      "required": [
        "location",
        "crew_size",
        "mission_days",
        "mission_type",
        "deployment_vehicle",
        "habitat_material"
      ]
    }
  },
  "required": ["habitat"]
}
